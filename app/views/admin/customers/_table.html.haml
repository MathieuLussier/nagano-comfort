.table-responsive
  %table.table.caption-top
    %caption
      Customers
      .float-end
        = render "layouts/pagination_limit"
    %thead.table-dark
      %tr
        %th{scope: "col"} #
        %th{scope: "col"}= Customer.human_attribute_name(:name)
        %th{scope: "col"}= Customer.human_attribute_name(:email)
        %th{scope: "col"}= Customer.human_attribute_name(:phone)
        %th{colspan: "3"}
    %tbody
      - @customers.each do |customer|
        %tr
          %th{scope: "row"}= customer.id
          %td= customer.name
          %td= customer.email
          %td= customer.phone
          %td
            .btn-group.btn-group-sm{"aria-label" => "Action buttons", role: "group"}
              = link_to 'Show', admin_customer_path(customer), remote: true, class: 'btn btn-success'
              = link_to 'Edit', edit_admin_customer_path(customer), remote: true, class: 'btn btn-warning'
              = link_to 'Delete', admin_customer_path(customer), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this customer ?' }
  .d-flex.justify-content-between
    %div
      = link_to "Create new customer", new_admin_customer_path, remote: true, class: "btn btn-primary"
    = render "layouts/pagination_navigation"