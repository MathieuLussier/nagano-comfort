.table-responsive
  %table.table.caption-top
    %caption
      View Types
      .float-end
        = render "layouts/pagination_limit"
    %thead.table-dark
      %tr
        %th{scope: "col"} #
        %th{scope: "col"}= ViewType.human_attribute_name(:name)
        %th{colspan: "3"}
    %tbody
      - @view_types.each do |view_type|
        %tr
          %th{scope: "row"}= view_type.id
          %td= view_type.name
          %td
            .btn-group.btn-group-sm{"aria-label" => "Action buttons", role: "group"}
              = link_to 'Edit', edit_admin_view_type_path(view_type), remote: true, class: 'btn btn-warning'
              = link_to 'Delete', admin_view_type_path(view_type), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this view type ?' }
  .d-flex.justify-content-between
    %div
      = link_to "Create new view type", new_admin_view_type_path, remote: true, class: "btn btn-primary"
    = render "layouts/pagination_navigation"