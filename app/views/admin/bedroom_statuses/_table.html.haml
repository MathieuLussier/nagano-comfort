.table-responsive
  %table.table.caption-top
    %caption
      Bedroom Statuses
      .float-end
        = render "layouts/pagination_limit"
    %thead.table-dark
      %tr
        %th{scope: "col"} #
        %th{scope: "col"}= BedroomStatus.human_attribute_name(:name)
        %th{colspan: "3"}
    %tbody
      - @bedroom_statuses.each do |bedroom_status|
        %tr
          %th{scope: "row"}= bedroom_status.id
          %td= bedroom_status.name
          %td
            .btn-group.btn-group-sm{"aria-label" => "Action buttons", role: "group"}
              = link_to 'Edit', edit_admin_bedroom_status_path(bedroom_status), remote: true, class: 'btn btn-warning'
              = link_to 'Delete', admin_bedroom_status_path(bedroom_status), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this bedroom status ?' }
  .d-flex.justify-content-between
    %div
      = link_to "Create new bedroom status", new_admin_bedroom_status_path, remote: true, class: "btn btn-primary"
    = render "layouts/pagination_navigation"