.card{style: "max-width: 18rem;"}
  .card-body
    %h5.card-title
      #{@price_variation.name}
  %ul.list-group.list-group-flush
    %li.list-group-item
      = "#{PriceVariation.human_attribute_name(:variation_amount)}: #{@price_variation.variation_amount}"
    %li.list-group-item
      = "#{PriceVariation.human_attribute_name(:start_date)}: #{@price_variation.start_date}"
    %li.list-group-item
      = "#{PriceVariation.human_attribute_name(:out_date)}: #{@price_variation.end_date}"
    %li.list-group-item
      = "#{PriceVariation.human_attribute_name(:day_of_week)}: #{day_of_the_week_mapping(@price_variation.day_of_week)}"
    %li.list-group-item
      = "#{PriceVariation.human_attribute_name(:is_discount)}: #{@price_variation.is_discount}"
  .card-body
    .btn-group.btn-group-sm{"aria-label" => "Action buttons", role: "group"}
      = link_to 'Edit', edit_admin_price_variation_path(@price_variation), remote: true, class: 'btn btn-warning'
      = link_to 'Delete', admin_price_variation_path(@price_variation), class: 'btn btn-danger', method: 'delete', data: { confirm: 'Are you sure you want to delete this price variation ?' }