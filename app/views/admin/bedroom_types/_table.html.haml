.table-responsive
  %table.table.caption-top
    %caption
      Bedroom Types
      .float-end
        = render "layouts/pagination_limit"
    %thead.table-dark
      %tr
        %th{scope: "col"} #
        %th{scope: "col"}= BedroomType.human_attribute_name(:name)
        %th{colspan: "3"}
    %tbody
      - @bedroom_types.each do |bedroom_type|
        %tr
          %th{scope: "row"}= bedroom_type.id
          %td= bedroom_type.name
          %td
            .btn-group.btn-group-sm{"aria-label" => "Action buttons", role: "group"}
              = link_to 'Edit', edit_admin_bedroom_type_path(bedroom_type), remote: true, class: 'btn btn-warning'
              = link_to 'Delete', admin_bedroom_type_path(bedroom_type), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this bedroom type ?' }
  .d-flex.justify-content-between
    %div
      = link_to "Create new bedroom type", new_admin_bedroom_type_path, remote: true, class: "btn btn-primary"
    = render "layouts/pagination_navigation"