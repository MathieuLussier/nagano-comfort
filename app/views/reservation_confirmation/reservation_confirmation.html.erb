<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>
<body>
  <h1><%= @customer.name %>, your reservation as been created successfully !</h1>
  <h3>Reservation details</h3>
  <div>
    Date: <%= @reservation.in_date.to_date %>
    Number of guests: <%= @reservation.nb_guests %>
    Duration: <%= @reservation.duration %>
    Total: <%= number_to_currency(@reservation.sub_total.to_f, unit: '$') %>
  </div>
</body>
</html>