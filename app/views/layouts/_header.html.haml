%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
  .container-fluid
    = link_to 'Nagano comfort', root_path, class: 'navbar-brand'
    %button.navbar-toggler{"aria-controls" => "navbar-items", "aria-expanded" => "false", "data-bs-target" => "#navbar-items", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbar-items.collapse.navbar-collapse
      %ul.navbar-nav.me-auto.mb-2.mb-lg-0
        %li.nav-item
          = link_to 'Search Bedrooms', client_bedrooms_path, class: "nav-link"
        %li.nav-item
          = link_to 'My Reservations', client_reservations_path, class: "nav-link"
        %li.nav-item
          = link_to 'My Transactions', client_transactions_path, class: "nav-link"
        - if @user_role == 'Admin'
          %li.nav-item.dropdown
            %a#navbar-admin-dropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", href: "#", role: "button"}
              Admin Panel
            %ul.dropdown-menu{"aria-labelledby" => "navbar-admin-dropdown"}
              %li
                = link_to 'Bedrooms', admin_bedrooms_path, class: "dropdown-item"
              %li
                = link_to 'Bedroom Statuses', admin_bedroom_statuses_path, class: "dropdown-item"
              %li
                = link_to 'Bedroom Types', admin_bedroom_types_path, class: "dropdown-item"
              %li
                = link_to 'View Types', admin_view_types_path, class: "dropdown-item"
              %li.dropdown-divider
              %li
                = link_to 'Reservations', admin_reservations_path, class: "dropdown-item"
              %li
                = link_to 'Transactions', admin_transactions_path, class: "dropdown-item"
              %li
                = link_to 'Price Variations', admin_price_variations_path, class: "dropdown-item"
              %li
                = link_to 'Customers', admin_customers_path, class: "dropdown-item"
      = render 'layouts/user_role_selector'