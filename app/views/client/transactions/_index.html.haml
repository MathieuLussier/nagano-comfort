.container
  %h1 My Transactions
  .d-flex.justify-content-end
    = render "layouts/pagination_limit"
  .row.mt-4
    - @transactions.each do |transaction|
      .col-4
        = card_transaction(transaction)
    - if @record_count < 1
      No transactions to show
  .d-flex.justify-content-end
    = render "layouts/pagination_navigation"