.container
  %h1 My Reservations
  .d-flex.justify-content-end
    = render "layouts/pagination_limit"
  .row.mt-4
    - @reservations.each do |reservation|
      .col-4
        = card_reservation(reservation)
    - if @record_count < 1
      No reservations to show
  .d-flex.justify-content-end
    = render "layouts/pagination_navigation"